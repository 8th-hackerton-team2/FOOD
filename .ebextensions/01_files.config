

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/maro_01_collectstatic.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      if [ -f /tmp/collectstatic ]
      then
        rm /tmp/collectstatic
        sudo docker exec `sudo docker ps -q` python /srv/project/app/manage.py collectstatic --noinput
      fi

